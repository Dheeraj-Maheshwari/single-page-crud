<tr>
  <td><%= product.name%></td>
  <td><%= product.details%></td>
  <td><%= product.price%></td>
    <div id = "show_product">
    </div>
  <td id = "show_product">
      <%= link_to "Show", product_path(product), remote: true , class: "show_link"%>
      <%= link_to "Edit", edit_product_path(product),remote: true ,id: "edit" if current_user.admin %>
      <%= link_to "Delete", product_path(product), method: :delete, :data => {:confirm => 'Confirm delete?'} ,remote: true , id: "1", class: "del" if current_user.admin %>
  </td>
</tr>